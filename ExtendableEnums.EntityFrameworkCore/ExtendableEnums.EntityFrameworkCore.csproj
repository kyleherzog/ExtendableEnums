<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <ApplicationVersion>4.0</ApplicationVersion>
    <ApplicationRevision>0</ApplicationRevision>
